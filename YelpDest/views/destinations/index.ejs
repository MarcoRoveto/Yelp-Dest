<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpDest!</h1>
            <p>View our destinations from all over the world.</p>
            <p>
                <a class="btn btn-primary btn-large" href="/destinations/new">Add New Destination!</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Destination!</h3>
        </div>
    </div>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% destinations.forEach(function(destination){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= destination.img %>"></img>
                <div class="caption">
                    <h4><%= destination.name %></h4>
                </div>
                    <p>
                        <a href="/destinations/<%= destination._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>